<?xml version="1.0" encoding="UTF-8"?>
  <workout_file>
      <author>Pierre-Alexandre St-Jean</author>
      <n>W1-T: FTP Test</n>
      <description>Initial FTP assessment test. Warm up progressively, then give maximum sustainable effort for 20 minutes. Your average power × 0.95 = your FTP.</description>
      <sportType>bike</sportType>
      <tags>
          <tag name="Week 1"/>
        <tag name="FTP Test"/>
        <tag name="Assessment"/>
      </tags>
      <workout>
          <Warmup Duration="300" PowerLow="0.5" PowerHigh="0.6">
            <textevent timeoffset="10" message="Start easy and gradually build"/>
        </Warmup>
        <Warmup Duration="600" PowerLow="0.6" PowerHigh="0.75">
            <textevent timeoffset="60" message="Continue building intensity"/>
        </Warmup>
        <SteadyState Duration="300" Power="0.5">
            <textevent timeoffset="10" message="Easy spinning to prepare for openers"/>
        </SteadyState>
        <SteadyState Duration="60" Power="1.1">
            <textevent timeoffset="10" message="Opener 1/3 - Hard but controlled"/>
        </SteadyState>
        <SteadyState Duration="120" Power="0.5">
        </SteadyState>
        <SteadyState Duration="60" Power="1.1">
            <textevent timeoffset="10" message="Opener 2/3 - Same intensity"/>
        </SteadyState>
        <SteadyState Duration="120" Power="0.5">
        </SteadyState>
        <SteadyState Duration="60" Power="1.1">
            <textevent timeoffset="10" message="Opener 3/3 - Prepare for test"/>
        </SteadyState>
        <SteadyState Duration="300" Power="0.5">
            <textevent timeoffset="10" message="Final recovery - prepare mentally"/>
            <textevent timeoffset="240" message="Get ready for 20-min FTP test!"/>
        </SteadyState>
        <SteadyState Duration="1200" Power="1">
            <textevent timeoffset="10" message="FTP TEST! Maximum sustainable effort for 20 minutes"/>
            <textevent timeoffset="300" message="5 min down - settle into rhythm"/>
            <textevent timeoffset="600" message="Halfway! Stay strong and steady"/>
            <textevent timeoffset="900" message="5 min to go - dig deep!"/>
            <textevent timeoffset="1080" message="Final 2 minutes - everything you have!"/>
        </SteadyState>
        <Cooldown Duration="900" PowerHigh="0.5" PowerLow="0.3">
            <textevent timeoffset="10" message="Great job! Cool down easy"/>
            <textevent timeoffset="300" message="Calculate: 20-min avg power × 0.95 = FTP"/>
        </Cooldown>
      </workout>
  </workout_file>